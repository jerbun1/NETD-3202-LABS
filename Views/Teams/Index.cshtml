@model IEnumerable<Lab5_Jermaine.Models.Teams>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.numberOfPlayers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerNames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numberOfPlayers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerNames)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NBAteamName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NBAteamName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NBAteamName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
